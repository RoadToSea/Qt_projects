/*右侧部分*/
PortrayPic {
    border: 1px solid white;
    padding: 10px;
    background-color: rgb(64,66,68);
}

PortrayPic QPushButton {
    border: none;                   /* 隐藏边框 */
    background-color: transparent;        /* 背景透明 */
    padding: 0;                      /* 去除内边距 */
}

SlideDlg {
    color:rgb(231,231,231);
    background-color:rgb(46,47,48);
}

#listPicWidget{
    color:rgb(231,231,231);
    background-color:rgb(46,47,48);
    border: 0px;
}

#listPicWidget::item:hover {
    background: rgb(38, 95, 153);
}

#listPicWidget::item:selected {
    background: rgb(38, 95, 153);
}

#prePicBtn,#nextPicBtn,#playBtn,#closeBtn{
    border: none;                   /* 隐藏边框 */
    background-color: transparent;        /* 背景透明 */
    padding: 0;                      /* 去除内边距 */
}

#prePicBtn{
    margin-top: 100px;
}

#nextPicBtn{
    margin-top: 50px;
}

#preListWidget::item:selected:active{
    border: 2px solid #FFFFFF;
}

#preListWidget::item:selected{
    border: 2px solid #FFFFFF;
}

